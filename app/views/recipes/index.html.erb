<div class="recipe-text">
    <% if @category_attribute %>
      <h1 ><u><%= @category_attribute %> Recipes</u></h1><br>
    <% else %>
      <h1><u>Recipes</u></h1><br>
    <% end %>
  <div class="recipe-container">
    <% if @search_term %>
      <p >Filtered by "<%= @search_term %>" </p>
    <% end %>
    <% @recipes.each do |recipe| %>
      <a class="recipe-text" href="/recipes/<%= recipe.id %>"><%= recipe.title %></a><br>
      By Chef <%= recipe.chef %><br>
      <br>
    <% end %>
  </div>
</div>
